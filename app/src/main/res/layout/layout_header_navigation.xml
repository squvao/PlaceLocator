<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="192dp"
    android:background="@drawable/navigation_view_header">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:src="@drawable/profile"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/content_settings_text_no_changed"
        android:textSize="14dp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:gravity="left"
        android:paddingBottom="4dp"
        android:id="@+id/content_settings_edit_text_user_sec_name"
        android:layout_above="@+id/content_settings_edit_text_user_name"
        android:layout_alignLeft="@id/profile_image"
        android:layout_alignStart="@id/profile_image" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/content_settings_text_no_changed"
        android:id="@+id/content_settings_edit_text_user_name"
        android:gravity="left"
        android:layout_marginBottom="8dp"
        android:textSize="14dp"
        android:textColor="@android:color/white"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/content_settings_edit_text_user_sec_name"
        android:layout_alignStart="@+id/content_settings_edit_text_user_sec_name" />
</RelativeLayout>